@model IEnumerable<darbuotoju_valdymos_sistema.Models.Task>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<table class="table">
  <tr>
    <th>                   
        <button id="sortByID" onclick="searchFunction('@ViewData["IdSortParam"]')">Task ID</button> 
    </th>
    <th>
        <button id="sortByName"onclick="searchFunction('@ViewData["NameSortParam"]')">Task Name</button> 
    </th>
    <th>
        Created at
    </th>
    <th>
        <button id="sortByDate"onclick="searchFunction('@ViewData["DateSortParam"]')">Due by date</button> 
    </th>
    <th>
        Workers assigned
    </th>
    <th>
        Actions
    </th>

  </tr>
  @foreach (var item in Model)
  {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.id)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.name)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.created)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.dueby)
      </td>
      <td>
      @foreach(var worker in item.workers){
          <button id="editUser">@worker.name @worker.lastName</button>    
      }
      </td>
      <td>
          <button id="editTask">Edit Task</button> 
          <button id="deleteDelete" onclick="removeTask(@item.id)">Delete Task</button> 
      </td>
    </tr>
  }
</table>